" => Set backup and temp directory
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
if has("win32")
	"set nobackup
	"set nowritebackup
	"set noswapfile
	set directory=$TMP
	set backupdir=$TMP
elseif has("unix")
	set nobackup
	"set nowritebackup
	"set noswapfile
	set directory=/tmp
	set backupdir=/tmp
endif

